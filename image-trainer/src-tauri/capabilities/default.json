{
  "identifier": "default",
  "description": "Default capabilities",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "dialog:default",
    "fs:default",
    "fs:allow-read-file",
    "fs:allow-read-text-file",
    "shell:allow-open",
    "fs:allow-write-text-file",
    "fs:allow-download-write",
    "fs:allow-home-write",
    "shell:allow-kill",
    "dialog:allow-save",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "python",
          "cmd": "python",
          "args": true
        },
        {
          "name": "python3",
          "cmd": "python3",
          "args": true
        },
        {
          "name": "cmd",
          "cmd": "cmd.exe",
          "args": true
        },
        {
          "name": "powershell",
          "cmd": "powershell.exe",
          "args": true
        },
        {
          "name": "conda",
          "cmd": "conda",
          "args": true
        },
        {
          "name": "bash",
          "cmd": "bash",
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "python",
          "cmd": "python",
          "args": true
        },
        {
          "name": "python3",
          "cmd": "python3",
          "args": true
        },
        {
          "name": "cmd",
          "cmd": "cmd.exe",
          "args": true
        },
        {
          "name": "powershell",
          "cmd": "powershell.exe",
          "args": true
        },
        {
          "name": "conda",
          "cmd": "conda",
          "args": true
        },
        {
          "name": "bash",
          "cmd": "bash",
          "args": true
        }
      ]
    },
    {
      "identifier": "fs:scope",
      "allow": [
        "$DESKTOP/**",
        "$DOCUMENT/**",
        "$DOWNLOAD/**",
        "$HOME/**",
        "$APPDATA/**",
        "$APPCONFIG/**",
        "$APPLOCALDATA/**",
        "$CACHE/**",
        "$TEMP/**",
        "C:/**",
        "D:/**",
        "E:/**"
      ]
    }
  ]
}